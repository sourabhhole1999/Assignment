<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        .container{
            background-color: bisque;
            background-size: 100% 100%;
            height: 500px;
        }
    </style>
</head>
<body>
    {{> nav}}
    <form method="post" action="/users/postData" id="fname">
    {{#if errMsg}}
      <div class="alert alert-danger">{{errMsg}}</div>
    {{/if}}
    {{#if succMsg}}
      <div class="alert alert-success">{{succMsg}}</div>
    {{/if}}
    <div class="container">
      <br>
      <br>
        <h2 class="text-center">Register Here</h2>
        <div class="row">
        <div class=" col-md-6">
            <label for="name" class="col-sm-1 col-form-label">Name:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="name" id="i1">
              <label id="l1" style="color:red;"></label>
            </div>
        </div>

        <div class=" col-md-6">
        <label for="email" class="col-sm-1 col-form-label">Email:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="email" id="i2">
          <label id="l2" style="color:red;"></label>
        </div>
      </div>
      </div>

       <div class="row">
      <div class=" col-md-6">
        <label for="password" class="col-sm-1 col-form-label">Password:</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" name="password" id="i3">
          <label id="l3" style="color:red;"></label>
        </div>
      </div>
      <div class=" col-md-6">
        <label for="age" class="col-sm-1 col-form-label">Age:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="age" id="i4">
          <label id="l4" style="color:red;"></label>
        </div>
      </div>
       </div>

       <div class="row">

      <div class=" col-md-6">
        <label for="city" class="col-sm-1 col-form-label">City:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="city" id="i5">
          <label id="l5" style="color:red;"></label>
        </div>
      </div>
      </div>
      <button type="submit"  value="submit" class="btn btn-primary text-center" id="btn">Register</button>
      </div>
      <script>
            var btn=document.getElementById("btn");
            btn.addEventListener("click",function(event){
                event.preventDefault();
                var n1=/^[a-zA-Z\s]+$/;
                var n2=/^\w+([-+.']\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*$/;
                var n3=/^[a-zA-Z0-9!@#$%^&*]{6,30}$/;
                var n4=/^[0-9]+$/;
                var n5=/^[a-zA-Z\s]+$/;
                var name=document.getElementById("i1").value;
                var email=document.getElementById("i2").value;
                var password=document.getElementById("i3").value;
                var age=document.getElementById("i4").value;
                var city=document.getElementById("i5").value;
                var form=document.getElementById("fname");

                if(n1.test(name))
                {
                    document.getElementById("l1").innerHTML="";
                    if(n2.test(email))
                    {
                      document.getElementById("l2").innerHTML="";
                      if(n3.test(password))
                      {
                      
                        document.getElementById("l3").innerHTML="";
                        if(n4.test(age))
                        {
                          document.getElementById("l4").innerHTML="";
                          if(n5.test(city))
                          {
                            document.getElementById("l5").innerHTML="";
                            form.submit();
                          }
                          else
                          {
                            document.getElementById("l5").innerHTML=" *Invalid city";
                          }
                        }
                        else
                        {
                          document.getElementById("l4").innerHTML=" *Invalid age";
                        }
                      }
                      else
                      {
                        document.getElementById("l3").innerHTML=" *Password must be greater than 6 characters";
                      }
                    }
                    else
                    {
                      document.getElementById("l2").innerHTML=" *Invalid email";
                    }
                }
                else
                {
                    document.getElementById("l1").innerHTML=" *Invalid name";
                }
            })
        </script>
    </form>
</body>
</html>
